<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.test.movie.util.Content" />

        <import type="com.test.movie.util.Type" />

        <variable
            name="fragment"
            type="com.test.movie.presentation.screen.search.SearchFragment" />

        <variable
            name="viewModel"
            type="com.test.movie.presentation.screen.search.SearchViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ivBack"
                isVisible="@{viewModel.isSearchIsInitialized()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/start_margin"
                android:layout_marginEnd="@dimen/end_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{() -> fragment.clearSearch()}"
                android:src="?attr/homeAsUpIndicator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="16dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                app:layout_constraintTop_toTopOf="parent">

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:iconifiedByDefault="false"
                    android:queryHint="@string/search_query_hint" />

            </androidx.cardview.widget.CardView>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/linearProgressIndicator"
                style="@style/Loading"
                isVisible="@{viewModel.uiState.loading &amp;&amp; !viewModel.query.empty}"
                android:layout_gravity="bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                isVisible="@{viewModel.query.empty}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    style="@style/TitleDayNight"
                    android:layout_margin="@dimen/start_margin"
                    android:text="@string/title_genres" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvGenres"
                    fixedSize="@{true}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/start_margin"
                    android:paddingEnd="@dimen/end_margin"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2" />

            </LinearLayout>

            <LinearLayout
                isVisible="@{viewModel.uiState.success &amp;&amp; !viewModel.query.empty}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/TitleParent"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/TitleDayNight"
                        android:text="@string/title_movies" />

                    <TextView
                        style="@style/ListItemCount"
                        android:text="@{@string/item_count(viewModel.movieTotalResult)}"
                        app:layout_constraintStart_toEndOf="@id/textView2" />

                    <TextView
                        style="@style/SeeAll"
                        contentType="@{Content.SEARCH}"
                        isVisible="@{viewModel.movieTotalResult > 3}"
                        seeAllDetailType="@{Type.MOVIE}"
                        stringId="@{viewModel.query}"
                        title="@{@string/title_see_all_search(viewModel.query, viewModel.movieTotalResult)}" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMovies"
                    style="@style/RecyclerView"
                    isGrid="@{true}"
                    loadMore="@{viewModel::onLoadMore}"
                    shouldLoadMore="@{true}"
                    android:adapter="@{fragment.adapterMovies}"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2" />

            </LinearLayout>
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>